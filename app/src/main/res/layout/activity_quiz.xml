<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.quizapp.Quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/layout_question_1"
            style="@style/QuestionLayout">

            <TextView
                android:id="@+id/txt_no_question_1"
                android:text="@string/question_1_num"
                style="@style/QuestionNumber"/>
            <TextView
                android:id="@+id/txt_question_1"
                android:text="@string/question_1"
                android:layout_toRightOf="@id/txt_no_question_1"
                style="@style/QuestionText"/>

            <LinearLayout
                android:layout_toRightOf="@id/txt_no_question_1"
                android:layout_below="@id/txt_question_1"
                style="@style/AnswersLayout">
                <CheckBox
                    android:id="@+id/question_1_answer_1"
                    style="@style/AnswerCheckBox"
                    android:text="@string/question_1_answer_1"/>
                <CheckBox
                    android:id="@+id/question_1_answer_2"
                    style="@style/AnswerCheckBox"
                    android:text="@string/question_1_answer_2"/>
                <CheckBox
                    android:id="@+id/question_1_answer_3"
                    style="@style/AnswerCheckBox"
                    android:text="@string/question_1_answer_3"/>
                <CheckBox
                    android:id="@+id/question_1_answer_4"
                    style="@style/AnswerCheckBox"
                    android:text="@string/question_1_answer_4"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_question_2"
            style="@style/QuestionLayout">

            <TextView
                android:id="@+id/txt_no_question_2"
                android:text="@string/question_2_num"
                style="@style/QuestionNumber"/>
            <TextView
                android:id="@+id/txt_question_2"
                android:text="@string/question_2"
                android:layout_toRightOf="@id/txt_no_question_2"
                style="@style/QuestionText"/>

            <RadioGroup
                android:layout_toRightOf="@id/txt_no_question_2"
                android:layout_below="@id/txt_question_2"
                style="@style/AnswersLayout">
                <RadioButton
                    android:id="@+id/question_2_answer_1"
                    style="@style/AnswerCheckBox"
                    android:text="@string/question_2_answer_1"/>
                <RadioButton
                    android:id="@+id/question_2_answer_2"
                    style="@style/AnswerCheckBox"
                    android:text="@string/question_2_answer_2"/>
                <RadioButton
                    android:id="@+id/question_2_answer_3"
                    style="@style/AnswerCheckBox"
                    android:text="@string/question_2_answer_3"/>
                <RadioButton
                    android:id="@+id/question_2_answer_4"
                    style="@style/AnswerCheckBox"
                    android:text="@string/question_2_answer_4"/>
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_question_3"
            style="@style/QuestionLayout">

            <TextView
                android:id="@+id/txt_no_question_3"
                android:text="@string/question_3_num"
                style="@style/QuestionNumber"/>
            <TextView
                android:id="@+id/txt_question_3"
                android:text="@string/question_3"
                android:layout_toRightOf="@id/txt_no_question_3"
                style="@style/QuestionText"/>

            <LinearLayout
                android:layout_toRightOf="@id/txt_no_question_3"
                android:layout_below="@id/txt_question_3"
                style="@style/AnswersLayout">

                <EditText
                    android:id="@+id/question_3_answer_1"
                    style="@style/AnswerEditText"
                    android:hint="@string/question_3_placeholder"
                    android:nextFocusUp="@id/question_3_answer_1"
                    android:nextFocusLeft="@id/question_3_answer_1"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_question_4"
            style="@style/QuestionLayout">

            <TextView
                android:id="@+id/txt_no_question_4"
                android:text="@string/question_4_num"
                style="@style/QuestionNumber"/>
            <TextView
                android:id="@+id/txt_question_4"
                android:text="@string/question_4"
                android:layout_toRightOf="@id/txt_no_question_4"
                style="@style/QuestionText"/>

            <RadioGroup
                android:layout_toRightOf="@id/txt_no_question_4"
                android:layout_below="@id/txt_question_4"
                style="@style/AnswersLayout">
                <RadioButton
                    android:id="@+id/question_4_answer_1"
                    style="@style/AnswerCheckBox"
                    android:text="@string/question_4_answer_1"/>
                <RadioButton
                    android:id="@+id/question_4_answer_2"
                    style="@style/AnswerCheckBox"
                    android:text="@string/question_4_answer_2"/>
                <RadioButton
                    android:id="@+id/question_4_answer_3"
                    style="@style/AnswerCheckBox"
                    android:text="@string/question_4_answer_3"/>
                <RadioButton
                    android:id="@+id/question_4_answer_4"
                    style="@style/AnswerCheckBox"
                    android:text="@string/question_4_answer_4"/>
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_question_5"
            style="@style/QuestionLayout">

            <TextView
                android:id="@+id/txt_no_question_5"
                android:text="@string/question_5_num"
                style="@style/QuestionNumber"/>
            <TextView
                android:id="@+id/txt_question_5"
                android:text="@string/question_5"
                android:layout_toRightOf="@id/txt_no_question_5"
                style="@style/QuestionText"/>

            <LinearLayout
                android:layout_toRightOf="@id/txt_no_question_5"
                android:layout_below="@id/txt_question_5"
                style="@style/AnswersLayout">
                <CheckBox
                    android:id="@+id/question_5_answer_1"
                    style="@style/AnswerCheckBox"
                    android:text="@string/question_5_answer_1"/>
                <CheckBox
                    android:id="@+id/question_5_answer_2"
                    style="@style/AnswerCheckBox"
                    android:text="@string/question_5_answer_2"/>
                <CheckBox
                    android:id="@+id/question_5_answer_3"
                    style="@style/AnswerCheckBox"
                    android:text="@string/question_5_answer_3"/>
                <CheckBox
                    android:id="@+id/question_5_answer_4"
                    style="@style/AnswerCheckBox"
                    android:text="@string/question_5_answer_4"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_question_6"
            style="@style/QuestionLayout">

            <TextView
                android:id="@+id/txt_no_question_6"
                android:text="@string/question_6_num"
                style="@style/QuestionNumber"/>
            <TextView
                android:id="@+id/txt_question_6"
                android:text="@string/question_6"
                android:layout_toRightOf="@id/txt_no_question_6"
                style="@style/QuestionText"/>

            <LinearLayout
                android:layout_toRightOf="@id/txt_no_question_6"
                android:layout_below="@id/txt_question_6"
                style="@style/AnswersLayout"
                >
                <EditText
                    android:id="@+id/question_6_answer_1"
                    style="@style/AnswerEditText"
                    android:hint="@string/question_6_placeholder"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_question_7"
            style="@style/QuestionLayout">

            <TextView
                android:id="@+id/txt_no_question_7"
                android:text="@string/question_7_num"
                style="@style/QuestionNumber"/>
            <TextView
                android:id="@+id/txt_question_7"
                android:text="@string/question_7"
                android:layout_toRightOf="@id/txt_no_question_7"
                style="@style/QuestionText"/>

            <LinearLayout
                android:layout_toRightOf="@id/txt_no_question_7"
                android:layout_below="@id/txt_question_7"
                style="@style/AnswersLayout"
                >
                <EditText
                    android:id="@+id/question_7_answer_1"
                    style="@style/AnswerEditText"
                    android:hint="@string/question_7_placeholder"/>
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submite_button"
            android:layout_gravity="center_horizontal"
            android:onClick="submit"/>

    </LinearLayout>

</ScrollView>